# ملف البيئة للإنتاج - Docker
# نسخ هذا الملف إلى .env وتحديث القيم بما يناسب بيئتك الإنتاجية

# ========================================
# إعدادات التطبيق
# ========================================
APP_NAME="Medication Reminder"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourdomain.com

APP_LOCALE=ar
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ar_SA

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# ========================================
# إعدادات قاعدة البيانات
# ========================================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=medication_db
DB_USERNAME=medication_user
DB_PASSWORD=ChangeThisStrongPassword123!
DB_ROOT_PASSWORD=ChangeThisRootPassword123!

# ========================================
# إعدادات Redis
# ========================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=ChangeThisRedisPassword123!
REDIS_PORT=6379

# ========================================
# إعدادات الجلسات والتخزين المؤقت
# ========================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com
SESSION_SECURE_COOKIE=true

CACHE_DRIVER=redis
CACHE_PREFIX=medication_cache

QUEUE_CONNECTION=redis

BROADCAST_CONNECTION=redis
FILESYSTEM_DISK=local

# ========================================
# إعدادات البريد الإلكتروني
# ========================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# ========================================
# إعدادات Twilio (للإشعارات)
# ========================================
TWILIO_SID=your_twilio_sid
TWILIO_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# ========================================
# إعدادات AWS (اختياري)
# ========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ========================================
# إعدادات Filament
# ========================================
FILAMENT_DOMAIN=admin.yourdomain.com
FILAMENT_PATH=admin

# ========================================
# إعدادات الأمان
# ========================================
SANCTUM_STATEFUL_DOMAINS=yourdomain.com,www.yourdomain.com
SESSION_DOMAIN=.yourdomain.com

# ========================================
# إعدادات أخرى
# ========================================
VITE_APP_NAME="${APP_NAME}"
